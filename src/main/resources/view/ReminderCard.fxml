<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>

<HBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      spacing="8" styleClass="card" stylesheets="@DarkTheme.css">
    <children>
        <Label fx:id="indexLabel" styleClass="cell_small_label"/>
        <Label fx:id="contentLabel" wrapText="true" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
    </children>
    <padding>
        <Insets top="6" right="10" bottom="6" left="10"/>
    </padding>
</HBox>
